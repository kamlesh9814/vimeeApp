<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Vimee" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/light_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Custom_Slider_Style" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/slider_overlay</item>
        <item name="thumbColor">@color/light_blue</item>
        <item name="android:weekSeparatorLineColor">@color/light_gray</item>
        <item name="android:fontFamily">@font/poppins_medium</item>

    </style>

    <style name="slider_overlay">
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorOnPrimary">@color/app_color</item>
    </style>

    <style name="Custom_Slider_Style1" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/slider_overlay1</item>
        <item name="thumbColor">@color/black</item>
        <item name="android:weekSeparatorLineColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_medium</item>

    </style>

    <style name="slider_overlay1">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

</resources>